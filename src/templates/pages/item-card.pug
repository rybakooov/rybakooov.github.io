                    .item-card-main-block-title-main-content
                        .item-card-main-block-title-main-content__img
                            img.coin-size(src="assets/images/coin-size.svg", alt="")
                            img.coin-line(src="assets/images/coin-size-line.svg", alt="")
                            span 25 мм
                        .item-card-main-block-title-main-content__properties
                            .item-card-main-block-title-main-content__properties-row
                                .item-card-main-block-title-main-content__properties-row-key
                                    span Страна:
                                .item-card-main-block-title-main-content__properties-row-value
                                    span Древняя Греция
                            .item-card-main-block-title-main-content__properties-row
