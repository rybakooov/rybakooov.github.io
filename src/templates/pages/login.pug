extends ../common/main.pug
block title
  title Вход
block content
  .wrapper.login
    .head
      .breadcrumb
        a(href="#").breadcrumb__link Главная
        a(href="#").breadcrumb__link Вход
    h1.gen-title Вход
    p.login__subtitle 
      <svg width="23" height="24" viewBox="0 0 23 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M10 13C7.176 13 4.671 13.638 3.025 14.193C1.81 14.604 1 15.749 1 17.032V21H9" stroke="#111111" stroke-width="2"/>
        <path fill-rule="evenodd" clip-rule="evenodd" d="M10 13V13C7.239 13 5 9.761 5 7V6C5 3.239 7.239 1 10 1V1C12.761 1 15 3.239 15 6V7C15 9.761 12.761 13 10 13Z" stroke="#111111" stroke-width="2" stroke-linecap="square"/>
        <path d="M14 20L16 22L21 17" stroke="#111111" stroke-width="2" stroke-linecap="square"/>
      </svg>
      | Авторизация
    form(action="", method="get").auth
      input#login_email(type="email", name="login-email" placeholder="E-mail")
      input#login_pass(type="password", name="login-pass" placeholder="Пароль")
      button(type="submit") Вход
      .auth-flex
        label
          input(type="checkbox")
          span.thumb-check
          | Запомнить меня
        a(href="#").forgetPass Забыли пароль?
    a(href="registration.html").makeAccount 
